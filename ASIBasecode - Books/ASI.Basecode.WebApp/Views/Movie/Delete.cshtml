@model ASI.Basecode.Data.Models.Movie

<div class="container pt-5">
    <h1 class="text-danger">Delete Movie</h1>
    <h4>Are you absolutely certain you want to delete this movie?</h4>

    <div class="card mt-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Movie Details</h5>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label><strong>Title:</strong></label>
                <p class="card-text">@Model.Title</p>
            </div>

            <div class="form-group">
                <label><strong>Director:</strong></label>
                <p class="card-text">@Model.Director</p>
            </div>

            <div class="form-group">
                <label><strong>Description:</strong></label>
                <p class="card-text">@Model.Description</p>
            </div>

            <div class="form-group">
                <label><strong>Release Date:</strong></label>
                <p class="card-text">@Model.ReleaseDate.ToString("yyyy-MM-dd")</p>
            </div>

            <div class="form-group">
                <label><strong>Image URL:</strong></label>
                <p class="card-text">@Model.ImageUrl</p>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <form method="post" asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg mr-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
        </form>
    </div>
</div>

<style>
    .container {
        max-width: 600px; /* Set a maximum width for better layout */
    }
    .card {
        border: 1px solid #dc3545; /* Red border for the card */
    }
</style>
